<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/actionbar_style</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="actionbar_style" parent="android:Theme.Holo.Light">
        <item name="background">@color/app_color</item>
        <item name="height">48dp</item>
        <item name="titleTextStyle">@style/actionbar_title_style</item>
        <item name="displayOptions">showTitle</item>
    </style>

    <style name="actionbar_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="et_log_reg_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/et_log_reg_bg</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="side_menu_item_style">
        <item name="android:textColor">@color/app_text_color_dark</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="mainActivityTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">#555</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="create_activity_edit_text_style">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_six</item>
    </style>

    <style name="party_activity_text_dark">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="party_activity_lable">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="party_activity_party_info">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_activity_detail_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="search_options_edittext">
        <item name="android:textColor">@color/grey_six</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="button_normal">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
