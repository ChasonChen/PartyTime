<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Title"
        android:textColor="@color/app_color"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/app_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_dialog_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/share2qq"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/iv_share_dialog_weixin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/share2weixin"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/iv_share_dialog_pengyouquan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:background="@drawable/share2pengyouquan"/>
    </LinearLayout>
</LinearLayout>